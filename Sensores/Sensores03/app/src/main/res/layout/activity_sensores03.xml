<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sensores03"
    android:orientation="vertical"
    android:background="#ecea80">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SENSOR GIROSCOPIO"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VELOCIDAD EJE X"
            android:textColor="#b464ff"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/ejex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceleracion_X"
            android:textColor="#000"
            android:textStyle="bold|italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VELOCIDAD EJE Y"
            android:textColor="#b464ff"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/ejey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceleracion_Y"
            android:textColor="#000"
            android:textStyle="bold|italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VELOCIDAD EJE Z"
            android:textColor="#b464ff"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/ejez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceleracion_Z"
            android:textColor="#000"
            android:textStyle="bold|italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTADOR"
            android:textColor="#b464ff"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/contador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contador"
            android:textColor="#000"
            android:textStyle="bold|italic"/>

    </LinearLayout>

</LinearLayout>